# Copy this file to .env.local and fill in your values.
# Required for /api/send-email (waitlist form).

# SendGrid API key (create at https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin email — receives waitlist sign-up notifications
ADMIN_EMAIL=admin@example.com

# Sender address — must be verified in SendGrid (Settings → Sender Authentication)
FROM_EMAIL=noreply@example.com

# Twilio — required for phone verification SMS
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Create a Verify Service at https://console.twilio.com/us1/develop/verify/services
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
